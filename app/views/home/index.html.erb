<div class="collage-area">
  <h1>Your collage</h1>
    <canvas id="collage-spot", height="500", width="500"></canvas>
</div>

<div class="user-feed-area">
  <h2>Backgrounds</h2>
    <%= image_tag "grid.png", class: "background", id: "grid" %>
    
  <h2>Images</h2>
    selected-images class images would go here

  <% if !current_user.nil? && current_user.provider == "twitter" %>
  
    <h2>Tweets</h2>
    
    <ul>
    <% @tweets.each do |tweet| %>
      <li class="tweet"><%= tweet.text %></li>
    <% end %>
    </ul>
  
  <% end %>  
  
  <% if !current_user.nil? && current_user.provider == "tumblr" %>
  
    <h2>Your latest Tumblr Posts</h2>
    
    <%= @tumblrs %>
    
    <% @tumblrs.each do |post| %>
      <%= post[0] %>
    <% end %>
    
  <% end %>
</div>

